<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".view.DiscussionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:background="@color/white"
        android:backgroundTint="@color/SadBlue"
        android:orientation="vertical"
        android:padding="0dp"
        tools:context=".view.DiscussionFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/button"
                android:layout_width="57dp"
                android:layout_height="60dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                app:iconPadding="0dp"
                app:iconTint="@color/black" />

            <TextView
                android:id="@+id/tvDiscussionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:text="Topic Title"
                android:textColor="@color/LightBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/descriptionTopic"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:padding="5dp"
            android:paddingStart="7dp"
            android:paddingBottom="8dp"
            android:text="Topic Description"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewComments"
        android:layout_width="match_parent"
        android:layout_height="758dp"
        android:layout_weight="1"
        android:clipToPadding="false" />

    <Button
        android:id="@+id/addComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/SadBlue"
        android:padding="8dp"
        android:text="Post a Comment"
        android:textColor="@color/white" />
</LinearLayout>
