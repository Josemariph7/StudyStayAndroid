<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.MessageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@android:color/white"
        android:elevation="2dp"
        android:background="@color/SadBlue"
        android:foregroundTint="@color/SadBlue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="54dp"
            android:layout_height="53dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:textColor="@color/SadBlue"
            app:icon="@drawable/baseline_arrow_back_ios_new_40"
            app:iconSize="25dp" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/CircleImageView"
            android:layout_width="67dp"
            android:layout_height="57dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/defaultprofile"
            tools:srcCompat="@tools:sample/avatars[0]" />

        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="7dp">

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textAlignment="textStart"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message"
            android:translationY="3dp" />

        <Button
            android:id="@+id/buttonSend"
            style="@style/CustomButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/SadBlue"
            android:stateListAnimator="@android:anim/linear_interpolator"
            android:text="Send" />
    </LinearLayout>
</LinearLayout>
