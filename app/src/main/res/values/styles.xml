<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Otros atributos del tema -->
        <item name="colorPrimary">@color/LightBlue</item>
        <item name="colorPrimaryDark">@color/SadBlue</item>
        <item name="colorAccent">@color/LightBlue</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:background">@color/white</item>
        <!-- Define any other custom styles you need -->
    </style>

    <!-- Custom button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/LightBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/LightBlue</item>
        <item name="android:textColor">@color/SadBlue</item>
        <item name="android:textColorPrimary">@color/SadBlue</item>
        <item name="android:textColorSecondary">@color/SadBlue</item>
        <item name="materialCalendarTheme">@style/CustomCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/CustomCalendar</item>
    </style>

    <!-- Estilo personalizado para CalendarView en DatePickerDialog -->
    <style name="CustomCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/LightBlue</item>
        <item name="colorPrimary">@color/SadBlue</item>
        <item name="colorPrimaryVariant">@color/LightBlue</item>
        <item name="android:textColorPrimary">@color/SadBlue</item>
        <item name="android:textColorSecondary">@color/SadBlue</item>
        <item name="android:headerBackground">@color/LightBlue</item>
    </style>
        <!-- Define el estilo personalizado para los EditText -->
        <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
            <item name="boxCornerRadiusTopStart">20dp</item>
            <item name="boxCornerRadiusTopEnd">20dp</item>
            <item name="boxCornerRadiusBottomStart">0dp</item>
            <item name="boxCornerRadiusBottomEnd">0dp</item>
            <item name="android:backgroundTint">@android:color/transparent</item>
            <item name="android:focusable">true</item>
            <item name="android:focusableInTouchMode">true</item>
            <item name="android:clickable">true</item>
            <item name="android:cursorVisible">true</item>
        </style>

        <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox.Dense">
            <item name="android:backgroundTint">@android:color/transparent</item>
        </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomButtonStyle" parent="android:Widget.Material.Button">
        <item name="android:textColor">@color/LightBlue</item>
    </style>
    <style name="CustomButtonStyle2" parent="android:Widget.Material.Button">
    <item name="android:textColor">@color/LightBlue</item>
        <item name="android:background">@color/SadBlue</item>
</style>


</resources>
