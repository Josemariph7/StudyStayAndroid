<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/LightBlue</item>
        <item name="colorPrimaryDark">@color/SadBlue</item>
        <item name="colorAccent">@color/LightBlue</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:background">@color/white</item>
        <!-- Define any other custom styles you need -->
    </style>

    <!-- Custom button style -->
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/LightBlue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomDatePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/LightBlue</item>
        <item name="android:textColor">@color/SadBlue</item>
        <item name="android:textColorPrimary">@color/SadBlue</item>
        <item name="android:textColorSecondary">@color/SadBlue</item>
        <item name="materialCalendarTheme">@style/CustomCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/CustomCalendar</item>
    </style>

    <!-- Estilo personalizado para CalendarView en DatePickerDialog -->
    <style name="CustomCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/LightBlue</item>
        <item name="colorPrimary">@color/SadBlue</item>
        <item name="colorPrimaryVariant">@color/LightBlue</item>
        <item name="android:textColorPrimary">@color/SadBlue</item>
        <item name="android:textColorSecondary">@color/SadBlue</item>
        <item name="android:headerBackground">@color/LightBlue</item>
    </style>

    <style name="CustomButtonStyle" parent="android:Widget.Material.Button.Borderless">
        <item name="android:textColor">@color/LightBlue</item>
    </style>


    <!-- Custom error color -->
    <color name="errorColor">#FF0000</color>

</resources>
