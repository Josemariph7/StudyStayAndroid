<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/LightBlue"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="12dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/nav_user_photo"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circularimage"
        android:translationX="10dp"
        android:translationY="-65dp"
         />

    <TextView
        android:id="@+id/nav_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de Usuario"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:translationX="12dp"
        android:translationY="55dp" />

    <TextView
        android:id="@+id/nav_user_email"
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="email@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:translationX="12dp"
        android:translationY="83dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="131dp"
        android:layout_height="94dp"
        android:background="@drawable/simpletransparente"
        android:translationX="155dp"
        android:translationY="-63dp" />
</RelativeLayout>
