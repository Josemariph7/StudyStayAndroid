<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SadBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Botón de filtros y mapa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/SadBlue">

            <Button
                android:id="@+id/filter_button"
                android:layout_width="0dp"
                android:backgroundTint="@color/SadBlue"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:layout_weight="1"
                android:text="Filters"/>

            <Button
                android:id="@+id/map_button"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/SadBlue"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:text="Map"/>
        </LinearLayout>

        <!-- Contenedor de filtros -->
        <LinearLayout
            android:id="@+id/filters_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightBlue"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <Spinner
                android:id="@+id/filter_city_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SadBlue"
                android:padding="8dp" />

            <Spinner
                android:id="@+id/filter_capacity_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SadBlue"
                android:padding="8dp" />

            <CheckBox
                android:id="@+id/filter_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/SadBlue"
                android:checked="true"
                android:text="Available" />

            <Button
                android:id="@+id/apply_filters_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apply Filters"
                android:backgroundTint="@color/SadBlue"
                android:textColor="@android:color/white"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Botón para añadir alojamiento -->
        <Button
            android:id="@+id/add_accommodation_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Accommodation"
            android:backgroundTint="@color/SadBlue"
            android:textColor="@android:color/white"
            android:padding="16dp"/>
    </LinearLayout>
</FrameLayout>
