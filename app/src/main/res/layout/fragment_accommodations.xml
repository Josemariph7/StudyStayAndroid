<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SadBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Botón de filtros y mapa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@color/SadBlue"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/filter_button"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/SadBlue"
                android:text="Filters"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                app:icon="@drawable/iconfiltro"
                app:iconGravity="textEnd"
                app:iconSize="21dp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="src_in" />

            <Button
                android:id="@+id/button"
                android:layout_width="2dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/LightBlue"/>

            <Button
                android:id="@+id/map_button"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SadBlue"

                android:textColor="@android:color/white"
                android:translationX="5dp"
                app:icon="@drawable/iconmapa"
                app:iconGravity="textEnd"
                app:iconPadding="0dp"
                app:iconSize="33dp"
                app:iconTint="#FFFFFF"
                app:iconTintMode="src_in" />
        </LinearLayout>

        <!-- Contenedor de filtros -->
        <LinearLayout
            android:id="@+id/filters_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LightBlue"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:translationX="6dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City"
                    android:textColor="@color/SadBlue" />

                <Spinner
                    android:id="@+id/filter_city_spinner"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_dialog"
                    android:padding="8dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:translationX="-8dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capacity"
                    android:textColor="@color/SadBlue" />

                <Spinner
                    android:id="@+id/filter_capacity_spinner"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_dialog"
                    android:padding="8dp"
                    android:textAlignment="center" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/filter_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/SadBlue"
                android:checked="true"
                android:paddingTop="8dp"
                android:text="Available" />

            <Button
                android:id="@+id/apply_filters_button"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/SadBlue"
                android:padding="10dp"
                android:paddingTop="12dp"
                android:text="Apply Filters"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="848dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/add_accommodation_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/SadBlue"
            android:text="Post your Accommodation"
            android:textColor="@android:color/white" />
    </LinearLayout>
</FrameLayout>
