<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.MessageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"

        android:background="@color/SadBlue"
        android:backgroundTint="@color/SadBlue"
        android:elevation="2dp"
        android:foregroundTint="@color/SadBlue"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:background="@drawable/baseline_arrow_back_ios_new_40"
            android:backgroundTint="@color/white"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:textColor="@color/SadBlue"
            android:translationX="7dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="59dp"
            android:layout_height="57dp"
            android:paddingStart="5dp"
            android:translationX="13dp" />

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="7dp"
            android:paddingLeft="7dp"
            android:translationX="17dp">

            <TextView
                android:id="@+id/textViewUser"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="User Name"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMessages"
        android:layout_width="match_parent"
        android:layout_height="785dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:translationY="-7dp" />

    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:padding="6dp">

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/LightBlue"
            android:hint="Type a message"
            android:textColor="@color/SadBlue"
            android:textColorHint="@color/SadBlue"
            android:textSize="16sp"
            android:translationY="3dp" />

        <Button
            android:id="@+id/buttonSend"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/SadBlue"
            android:stateListAnimator="@android:anim/linear_interpolator"
            android:text="Send"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
