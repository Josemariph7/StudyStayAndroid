<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="12dp"
        android:text="Add Review"
        android:textColor="@color/SadBlue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Review Content"
        app:boxStrokeColor="@color/SadBlue"
        app:hintTextColor="@color/SadBlue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextReviewContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text_dark"
            android:backgroundTint="@color/white"
            android:textColor="@color/SadBlue"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/rating_bar_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:numStars="5"
            android:progressTint="#FFCD14"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:stepSize="0.5"
            android:translationY="-7dp" />
    </LinearLayout>

    <Button
        android:id="@+id/submitReviewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/SadBlue"
        android:text="Submit Review"
        android:textColor="@android:color/white" />
</LinearLayout>
